@using AusgleichslisteApp.Components.Shared

<header class="site-header">
    <div class="container-fluid">
        <div class="header-content">
            <!-- Brand -->
            <div class="brand-section">
                <BrandingComponent ShowLogo="true" ShowText="true" 
                                   TextCssClass="app-title" 
                                   CustomText="@GetAppTitle()" />
            </div>
            
            <!-- Navigation -->
            <nav class="main-nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <NavLink href="" Match="NavLinkMatch.All" class="nav-link">
                            Dashboard
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink href="buchungen" class="nav-link">
                            Buchungen
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink href="sammelbuchung" class="nav-link">
                            Sammel-Buchung
                        </NavLink>
                    </li>
                    
                    <!-- Admin-only links -->
                    <AuthorizeView Roles="Admin">
                        <Authorized>
                            <li class="nav-item">
                                <NavLink href="benutzer" class="nav-link">
                                    <i class="fas fa-users me-1"></i>
                                    Benutzer
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink href="einstellungen" class="nav-link">
                                    <i class="fas fa-cogs me-1"></i>
                                    Einstellungen
                                </NavLink>
                            </li>
                        </Authorized>
                    </AuthorizeView>
                </ul>
            </nav>
                
            <!-- User info and logout -->
            <div class="nav-user">
                <AuthorizeView>
                    <Authorized>
                        <span class="me-2 text-white">
                            <i class="fas fa-user me-1"></i>
                            @(context.User.FindFirst("DisplayName")?.Value ?? context.User.Identity?.Name ?? "Admin")
                        </span>
                        <form method="post" action="/api/logout" class="d-inline">
                            <button type="submit" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-sign-out-alt me-1"></i>
                                Abmelden
                            </button>
                        </form>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-sign-in-alt me-1"></i>
                            Anmelden
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
            
            <!-- Mobile Menu Toggle -->
            <button class="mobile-toggle d-lg-none" type="button" onclick="toggleMobileMenu()">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>
        </div>
        
        <!-- Mobile Navigation -->
        <nav class="mobile-nav d-lg-none" id="mobile-nav">
            <ul class="mobile-nav-list">
                <li class="mobile-nav-item">
                    <NavLink href="" Match="NavLinkMatch.All" class="mobile-nav-link">
                        Dashboard
                    </NavLink>
                </li>
                <li class="mobile-nav-item">
                    <NavLink href="buchungen" class="mobile-nav-link">
                        Buchungen
                    </NavLink>
                </li>
                <li class="mobile-nav-item">
                    <NavLink href="sammelbuchung" class="mobile-nav-link">
                        Sammel-Buchung
                    </NavLink>
                </li>
                
                <!-- Admin-only mobile links -->
                <AuthorizeView Roles="Admin">
                    <Authorized>
                        <li class="mobile-nav-item">
                            <NavLink href="benutzer" class="mobile-nav-link">
                                Benutzer
                            </NavLink>
                        </li>
                        <li class="mobile-nav-item">
                            <NavLink href="einstellungen" class="mobile-nav-link">
                                Einstellungen
                            </NavLink>
                        </li>
                    </Authorized>
                </AuthorizeView>
                
                <!-- Mobile user section -->
                <li class="mobile-nav-divider"></li>
                <AuthorizeView>
                    <Authorized>
                        <li class="mobile-nav-item">
                            <span class="mobile-nav-user">
                                <i class="fas fa-user me-2"></i>
                                @(context.User.FindFirst("DisplayName")?.Value ?? context.User.Identity?.Name ?? "Admin")
                            </span>
                        </li>
                        <li class="mobile-nav-item">
                            <form method="post" action="/api/logout">
                                <button type="submit" class="mobile-nav-link btn btn-link p-0 text-start w-100">
                                    <i class="fas fa-sign-out-alt me-2"></i>
                                    Abmelden
                                </button>
                            </form>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="mobile-nav-item">
                            <a href="/login" class="mobile-nav-link">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Anmelden
                            </a>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </nav>
    </div>
</header>

@code {
    @using AusgleichslisteApp.Services
    @inject ISettingsCacheService SettingsCache

    private string GetAppTitle()
    {
        return SettingsCache.GetSettings().Branding.ApplicationName;
    }
}

<script>
    function toggleMobileMenu() {
        const mobileNav = document.getElementById('mobile-nav');
        mobileNav.classList.toggle('active');
    }
</script>